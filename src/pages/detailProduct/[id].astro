---
import Layout from "../../layouts/Layout.astro";
import { PRODUCTOS } from "../../scripts/productos.js";

export function getStaticPaths() {
  return [
    { params: { id: "1" } },
    { params: { id: "2" } },
    { params: { id: "3" } },
    { params: { id: "4" } },
    { params: { id: "5" } },
    { params: { id: "6" } },
    { params: { id: "7" } },
    { params: { id: "8" } },
    { params: { id: "9" } },
  ];
}

const { id } = Astro.params;

const product = PRODUCTOS.find((product) => product.id == id);
---

<Layout>
  <section>
    <div class="content">
      <a href="/#nuestrosProductos" class="back" aria-label="Volver hacia atras"
        ><i class="bi bi-arrow-left"></i></a
      >
      <h2>{product.title}</h2>
      <div class="images gallery">
          {
            product.imgs && product.imgs.map((image) => {
              return <a href={image} data-caption="Image caption"  aria-label={`Imagen ilustrativa de la tela ${product.title}`}> 
                      <img src={image} alt={`Imagen ilustrativa de la cortina ${product.title}`}/>
                      </a>
            })
          }
      </div>
      <div class="detalle-contenido">
        <article class="description">
          {
            product.description.map((parr) => {
              return <p>{parr}</p>;
            })
          }
        </article>

        <article class="ideal">
          <h2>Ideal para</h2>

          <p class="ideal-content">
            {product.ideal}
          </p>
        </article>

        <article class="colors">
          <h2>Colores</h2>
          <div class="gallery">
            <p>{product.colors}</p>
            <a href={product.gamaColors || "/imgs/colores/blackout-premium.jpeg"} data-caption="Image caption"  aria-label="Imagen de la gama de colores">
              <img src={product.gamaColors || "/imgs/colores/blackout-premium.jpeg"} alt={`Gama de colores disponibles de la cortina o toldo ${product.title}`} loading="lazy" decoding="async">
            </a>
          </div>
        </article>
      </div>

      <a
        href=`https://wa.me/1165075228?text=${encodeURIComponent("Hola! Estoy interesado en ")} ${encodeURIComponent(product.title)} ${encodeURIComponent(" , quisiera solicitar cotización.")}`
        target="_blank"
        aria-label="Boton para solicitar cotizacion"
        class="btn">Solicitar cotización</a
      >
    </div>
  </section>
</Layout>

<style>
  section {
    min-height: 100vh;
    padding-block: 6rem 2rem;
    padding-inline: 1rem;

    background-image: linear-gradient(
        0deg,
        rgba(0, 0, 0, 0.5),
        rgba(0, 0, 0, 0.5)
      ),
      url(/public/imgs/bgDetail.webp);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;

    .content {
      display: flex;
      flex-direction: column;

      gap: 1rem;

      i {
        font-size: 2rem;
        color: var(--clr-primary);
        cursor: pointer;
      }

      h2 {
        font-size: 1.8rem;
        text-wrap: balance;
        white-space: normal;
      }

      div {
        display: flex;
        gap: 1rem;
        flex-wrap: nowrap;
        a {
          width: 300px;
          height: 250px;
          img {
            border-radius: 22px;
            width: 100%;
            height: 100%;
            border: 2px solid var(--clr-primary);
            object-fit: cover;
          }
        }
      }

      .detalle-contenido {
        grid-area: description;
        display: flex;
        overflow: hidden;
        flex-direction: column;
          
        h2 {
            font-size: 1.2rem;
        }

        .ideal {
          display: flex;
          flex-direction: column;

          .ideal-content {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            gap: 0.3rem;

            div {
              display: flex;
              flex-wrap: wrap;
              justify-items: center;
              align-items: center;
              gap: 6px;
              h3 {
                font-size: 1.1rem;
              }
              
            }
          }
        }

        .colors {
          display: flex;
          flex-direction: column;
          gap: 0rem;

          div {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            height: auto;
            a {
              flex: 1;
              img {
                width: 120px;
                height: 200px; 
                border: none;
                border-radius: 12px;
              }
            }
          }
        }

        p {
          font-size: 18px;
          font-weight: 300;
          text-wrap: pretty;
          text-align: left;
        }
      }

      .btn {
        background: var(--clr-primary);
        padding: 0.5rem 1.1rem;
        border-radius: 22px;
        width: fit-content;
        font-weight: 500;
        margin-top: .5rem;
        transition: background-color 0.3s ease;

        :hover {
          background-color: var(--clr-primary-hover);
        }
      }
    }
  }

  @media screen and (width > 750px) {
    section {
      .content {
        display: grid;
        max-width: 1200px;
        margin-left: auto;
        margin-right: auto;
        grid-template-areas:
          "back back"
          "title title"
          "div detalle-contenido"
          "div button";
        grid-template-rows: repeat(4, max-content);
        grid-template-columns: max-content 600px;

        .back {
          grid-area: back;
          justify-self: self-start;
          cursor: pointer;

          i {
            font-size: 2.2rem;
          }
        }

        h2 {
          grid-area: title;
          font-size: 2.3rem;
          text-wrap: pretty;
          justify-self: start;
        }

        .detalle-contenido {
          grid-area: detalle-contenido;
          width: 100%;
          height: 100%;

          .ideal {
            .ideal-content {
              height: auto;
              gap: 0.2rem;
              div {
                width: max-content;
                height: max-content;
              }
            }
          }

          .colors {
            
            div {
              height: auto;
              p {
              }
            }
          }
        }

        div {
          grid-area: div;
          width: 400px;
          height: 300px;
          overflow: hidden;

          align-self: start;
          a {
              height: 100%;
              width: 100%;
  
          }
        }

        .btn {
          grid-area: button;
          width: fit-content;
          height: fit-content;
          font-size: 18px;
          align-self: flex-end;

          &:hover {
            background-color: var(--clr-primary-hover);
          }
        }
      }
    }
  }

  @media screen and (width > 1024px) {
    section {
      display: flex;
      justify-items: center;
      align-items: center;
    }
  }
</style>

<script>
      import baguetteBox from 'baguettebox.js';
    import 'baguettebox.js/dist/baguetteBox.min.css';
    document.addEventListener('astro:page-load', function() {

      
        baguetteBox.run('.gallery', {
            captions: false,
            async: true,
            preload: 0,
        });
        
    });
</script>