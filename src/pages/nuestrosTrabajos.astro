---
import { TRABAJOS } from "../scripts/trabajos.js";
import ArrowLeft from "../components/arrowLeft.svg";
import ArrowRight from "../components/arrowRight.svg";
---

<section id="trabajos">

  <div class="content">
    
    <h2>Nuestros trabajos</h2>

    <button class="left" id="leftBtnTrabajos" aria-label="Boton de desplazarse hacia la izquierda"><ArrowLeft ></button>
    
      <div class="carrouselTrabajos gallery" id="gallery">
    
  {
    TRABAJOS.map((t) => {
      return (
        <a href={t} data-caption="Image caption"  aria-label="Imagen mostrando nuestros trabajos">
          <img loading="lazy" decoding="async" class="trabajo-img" src={t} alt="Imagen mostrando nuestros trabajos.." />
        </a>

       
      )
    })
  }
</div>

    <button class="right" id="rightBtnTrabajos" aria-label="Boton de desplazarse hacia la derecha"
      ><ArrowRight></ArrowRight></button
    >
  </div>
</section>

<style>
  section {
    overflow: hidden;
    padding: 3rem 1rem 2rem 1rem;
    background-image:
    linear-gradient(
        0deg,
        rgba(0, 0, 0, 0.4),
        rgba(0, 0, 0, 0.4)
      ),
      url(/public/imgs/bgDetail.webp);
      
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    position: relative;

    clip-path: polygon(0 0, 51% 4%, 100% 8%, 100% 100%, 0 100%, 0% 50%);

    .content {
        max-width: 1200px;
		    margin: 0 auto;
        
      display: flex;
      flex-direction: column;
      gap: 1rem;
      overflow: hidden;
      position: relative;

      @media screen and (width > 750px) {
        padding: 1rem;
      }

      h2 {
        font-size: 1.8rem;

        @media screen and (width > 750px) {
            font-size: 2.3rem;
        }
      }

      .carrouselTrabajos {
        display: flex;
        gap: 1rem;
        flex-wrap: nowrap;
        overflow: scroll;

        @media screen and (width > 750px) {
            gap: 1rem;
            overflow: visible;
            display: grid;
            grid-auto-flow: column;
            grid-template-rows: repeat(2, max-content); /* Dos filas */
            grid-auto-columns: max-content; 
            transition: transform 0.5s ease;
        }

        img {
          flex: 1 0 auto;
          border: 2px solid var(--clr-primary);
          height: 280px;   width: 250px;
          @media screen and (width > 750px) {
            width: 230px;
            height: 230px;
              filter: brightness(0.9);
              transition: filter 0.3s ease;

            &:hover {
              filter: brightness(1);
            }
          }
          border-radius: 12px;
          object-fit: cover;
        }
      }

      button {
        display: none;
        position: absolute;
        top: 50%;
        color: var(--clr-secondary);
        background-color: var(--clr-primary);
        border: none;
        border-radius: 50%;
        
        height: 40px;
        width: 40px;
        z-index: 1;
        cursor: pointer;
        transition: background-color .3s ease;
        &:hover {
            background-color: var(--clr-primary-hover);
        }
        svg {
            display: block;
            height: 20px;
            width:  20px;
            color: var(--clr-white);
        }
        @media screen and (width > 750px) {
            display: flex;
            justify-content: center;
            align-items: center;

            
        }
      }

      .left {
        left: 0;
      }
      .right {
        
        right: 0;
      }
    }

  }

  img {
    width: 300px;
    height: 300px;
  }

</style>

<script>

  document.addEventListener('astro:page-load', () => {
    if (typeof window === 'undefined') return;

    const carrousel = document.getElementById('gallery');
    const leftBtn = document.getElementById('leftBtnTrabajos');
    const rightBtn = document.getElementById('rightBtnTrabajos');
    let currentTranslate = 0; // desplazamiento en px

    const isDesktop = () => window.matchMedia('(min-width: 751px)').matches;

    function getGapPx() {
      const gapStr = getComputedStyle(carrousel).gap || '16px';
      const n = parseFloat(gapStr);
      return Number.isFinite(n) ? n : 16;
    }

    function getCardWidth() {
      const card = carrousel.querySelector('.trabajo-img');
      const gap = getGapPx();
      return card ? Math.round(card.getBoundingClientRect().width + gap) : 300;
    }

    function getVisibleWidth() {
      // Ancho del contenedor visible (la .content envuelve el carrusel)
      const parent = carrousel.parentElement || carrousel;
      return parent.clientWidth;
    }

    function getTotalColumns(totalCards) {
      const rows = isDesktop() ? 2 : 1;
      return Math.ceil(totalCards / rows);
    }

    function getMaxTranslate(totalCards, cardWidth, visibleWidth) {
      const totalColumns = getTotalColumns(totalCards);
      const totalContentWidth = totalColumns * cardWidth;
      return Math.max(0, totalContentWidth - visibleWidth);
    }

    function updateTransform() {
      if (isDesktop()) {
        carrousel.style.transform = `translateX(${-currentTranslate}px)`;
      } else {
        // En mobile no usamos transform (se hace scroll nativo)
        carrousel.style.transform = '';
      }
    }

    function updateButtons() {
      if (!leftBtn || !rightBtn) return;
      const totalCards = carrousel.querySelectorAll('.trabajo-img').length;
      const cardWidth = getCardWidth();
      const visibleWidth = getVisibleWidth();
      const maxTranslate = getMaxTranslate(totalCards, cardWidth, visibleWidth);

      if (currentTranslate <= 0) leftBtn.setAttribute('disabled', ''); else leftBtn.removeAttribute('disabled');
      if (currentTranslate >= maxTranslate) rightBtn.setAttribute('disabled', ''); else rightBtn.removeAttribute('disabled');
    }

    function scrollCarrousel(direction) {
      const totalCards = carrousel.querySelectorAll('.trabajo-img').length;
      const cardWidth = getCardWidth();
      const visibleWidth = getVisibleWidth();
      const maxTranslate = getMaxTranslate(totalCards, cardWidth, visibleWidth);
      const step = (isDesktop() ? 2 : 1) * cardWidth; // desktop: 2 columnas; mobile: 1 tarjeta

      currentTranslate = Math.min(Math.max(0, currentTranslate + direction * step), maxTranslate);
      updateTransform();
      updateButtons();
    }

    if (leftBtn && rightBtn) {
      leftBtn.addEventListener('click', () => scrollCarrousel(-1));
      rightBtn.addEventListener('click', () => scrollCarrousel(1));
    }

    window.addEventListener('resize', () => {
      // al redimensionar, recalculamos el límite y clamp
      const totalCards = carrousel.querySelectorAll('.trabajo-img').length;
      const cardWidth = getCardWidth();
      const visibleWidth = getVisibleWidth();
      const maxTranslate = getMaxTranslate(totalCards, cardWidth, visibleWidth);
      currentTranslate = Math.min(currentTranslate, maxTranslate);
      updateTransform();
      updateButtons();
    });

    // Setup inicial tras breve delay (por si las imágenes aún calculan tamaño)
    setTimeout(() => {
      currentTranslate = 0;
      updateTransform();
      updateButtons();
    }, 50);
  });

</script>
<script>
    import baguetteBox from 'baguettebox.js';
    import 'baguettebox.js/dist/baguetteBox.min.css';
    document.addEventListener('astro:page-load', function() {

      
        baguetteBox.run('.gallery', {
            captions: false,
            async: true,
            preload: 0,
        });
        
    });
</script>