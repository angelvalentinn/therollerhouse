---
import 'bootstrap-icons/font/bootstrap-icons.css'
import Header from '../pages/header.astro';
import Footer from '../pages/footer.astro';
import { ClientRouter } from 'astro:transitions';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="robots" content="noindex, nofollow"> <!-- cambiar a index, follow cuando quiero que se indexe -->

		<link rel="canonical" href="https://therollerhouse.netlify.app/">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Raleway:wght@300;400;500;600;700&display=swap" rel="stylesheet">
		<meta name="keywords" content="Cortinas, Toldos, Instalación, Medida, Protección Solar, Privacidad, Elegancia, Hogar, Negocio, CABA, GBA, Roller" />

		<!-- Primary Meta Tags -->
		<meta name="title" content="The Roller House | Cortinas y Toldos a medida" />
		<meta name="description" content="Venta e instalación de cortinas y toldos a medida. Protección solar, privacidad y elegancia para tu hogar o negocio. ¡Instalación rápida y profesional! | Zona CABA y GBA" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://therollerhouse.netlify.app" />
		<meta property="og:title" content="The Roller House | Cortinas y Toldos a medida" />
		<meta property="og:description" content="Venta e instalación de cortinas y toldos a medida. Protección solar, privacidad y elegancia para tu hogar o negocio. ¡Instalación rápida y profesional! | Zona CABA y GBA" />
		<meta property="og:image" content="https://therollerhouse.netlify.app/imgs/logo2.png" />

		<!-- X (Twitter) -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://therollerhouse.netlify.app" />
		<meta property="twitter:title" content="The Roller House | Cortinas y Toldos a medida" />
		<meta property="twitter:description" content="Venta e instalación de cortinas y toldos a medida. Protección solar, privacidad y elegancia para tu hogar o negocio. ¡Instalación rápida y profesional! | Zona CABA y GBA" />
		<meta property="twitter:image" content="https://therollerhouse.netlify.app/imgs/logo2.png" />

		<!-- Meta Tags Generated with https://metatags.io -->

		<link rel="icon" type="image" href="/imgs/logo2.png" />

		<title>The Roller House | Cortinas y Toldos</title>
		<ClientRouter/>
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
		<a href=`https://wa.me/1161439675?text=${encodeURIComponent("")}` target="_blank" aria-label="Whatsapp de The Roller House" class="contactoDirecto"><i class="bi bi-whatsapp"></i></a>
	</body>
</html>

<style is:global>

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		scroll-behavior: smooth;
	}

    body {
		overflow-x: hidden;
		font-family: 'Raleway', sans-serif;
		background-color: var(--clr-white);
		margin: 0 auto;

		.contactoDirecto {
			position:fixed;
			z-index: 1000;
			right: 10px;
			bottom: 10px;
			display: grid;
			place-content: center;
			width: 50px;
			height: 50px;
			border-radius: 50%;
			background-color: #25d366;
			transition: background-color .3s ease;
			box-shadow: 5px 7px 6px rgba(0, 0, 0, 0.413);

			i {
				font-size: 1.8rem;
			}

			&:hover {
				background-color: #23bb5b;
			}
		}
	}

	:root {
		--clr-primary: #B18F4F;
		--clr-primary-light: #D8B36F;
		--clr-primary-hover: #a48248;
		--clr-secondary: #6B8CAE;
		--clr-white: #f7f5f1;
		--clr-black: #3A3A3A;
	}

    li {
		list-style-type: none;
	}

	a {
		text-decoration: none;
		color: var(--clr-white-text);
	}

	p {
		
        font-size: 0.9rem;
        line-height: 1.5;
    }

	p,h1,h2,button,a,i {
		opacity: .9;
		color: var(--clr-white);
	}

	#baguetteBox-overlay {
	position: fixed !important;
	top: 0 !important;
	left: 0 !important;
	width: 100vw !important;
	height: 100vh !important;
	z-index: 9999 !important;
	display: none;
	}

	#baguetteBox-overlay.active {
	display: block;
	}

</style>

